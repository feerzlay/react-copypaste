{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./public/",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "paths": {
      "~modules/*": ["./source/modules/*"]
    }
  },
  "exclude": ["node_modules"]
}
